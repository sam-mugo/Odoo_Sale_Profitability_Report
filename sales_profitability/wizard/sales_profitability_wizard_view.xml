<odoo>
    <data>
        
        <!-- Wizard Form View -->
        <record id="view_sales_profitability_wizard_form" model="ir.ui.view">
            <field name="name">Sales Profitability Report Wizard</field>
            <field name="model">sales.profitability.wizard</field>
            <field name="arch" type="xml">
                <form string="Sales Profitability Report">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="company_id" invisible="1"/>
                                Sales Profitability Analysis
                            </h1>
                            <p class="oe_grey">
                                Generate comprehensive profitability reports with order-wise revenue, cost, and margin analysis.
                            </p>
                        </div>
                        
                        <group>
                            <group string="Date Range" col="2">
                                <field name="date_from" widget="date" required="1"/>
                                <field name="date_to" widget="date" required="1"/>
                            </group>
                            
                            <group string="Filters" col="2">
                                <field name="partner_ids" widget="many2many_tags" 
                                       placeholder="Select customers (leave empty for all)"
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="category_ids" widget="many2many_tags"
                                       placeholder="Select product categories (leave empty for all)"
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Report Options" col="2">
                                <field name="group_by" widget="radio"/>
                                <field name="show_details"/>
                                <field name="include_taxes"/>
                            </group>
                        </group>
                        
                        <!-- Results section (hidden by default) -->
                        <group string="Export Options" invisible="1" id="export_section">
                            <field name="excel_file" filename="excel_filename" invisible="1"/>
                            <field name="excel_filename" invisible="1"/>
                        </group>
                        
                    </sheet>
                    <footer>
                        <button name="action_generate_report" type="object" 
                                string="View Report" class="btn-primary"
                                icon="fa-chart-line"/>
                        <button name="action_export_excel" type="object" 
                                string="Export to Excel" class="btn-secondary"
                                icon="fa-file-excel-o"/>
                        <button name="action_print_report" type="object" 
                                string="Print Report" class="btn-secondary"
                                icon="fa-print"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action to open the wizard -->
        <record id="action_sales_profitability_wizard" model="ir.actions.act_window">
            <field name="name">Sales Profitability Report</field>
            <field name="res_model">sales.profitability.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sales_profitability_wizard_form"/>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

        <!-- Menu item -->
        <menuitem id="menu_sales_profitability_root"
                  name="Sales Profitability"
                  parent="sale.sale_menu_root"
                  sequence="100"/>

        <menuitem id="menu_sales_profitability_wizard"
                  name="Profitability Report"
                  parent="menu_sales_profitability_root"
                  action="action_sales_profitability_wizard"
                  sequence="10"/>

    </data>
</odoo>